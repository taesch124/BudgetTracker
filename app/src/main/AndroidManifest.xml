<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projects.danieltaeschler.budgettracker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".com.projects.danieltaeschler.budgettracker.expense.ExpenseListActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MenuActivity"/>
        </activity>
        <activity android:name=".com.projects.danieltaeschler.budgettracker.expense.ExpenseActivity" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".com.projects.danieltaeschler.budgettracker.expense.ExpenseListActivity"/>
        </activity>
        <activity android:name=".com.projects.danieltaeschler.budgettracker.expense.ExpenseEditActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".com.projects.danieltaeschler.budgettracker.expense.ExpenseListActivity"/>
        </activity>
        <activity android:name=".com.projects.danieltaeschler.budgettracker.income.IncomeListActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MenuActivity"/>
        </activity>
        <activity android:name=".com.projects.danieltaeschler.budgettracker.income.IncomeActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".com.projects.danieltaeschler.budgettracker.income.IncomeListActivity"/>
        </activity>
        <activity android:name=".com.projects.danieltaeschler.budgettracker.income.IncomeEditActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".com.projects.danieltaeschler.budgettracker.income.IncomeListActivity"/>
        </activity>
        <activity android:name=".com.projects.danieltaeschler.budgettracker.monthlyreport.BudgetReportActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MenuActivity" />
        </activity>
    </application>

</manifest>
